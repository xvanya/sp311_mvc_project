@model Category

<div class="d-flex flex-column align-items-center border w-50 m-auto p-2">
	<h1>Edit a category</h1>
	<div class="w-100 p-3">
		<form asp-action="Edit" method="post">
			<div class="form-group">
				<label for="name">Name</label>
				<input asp-for="Name" type="text" class="form-control" placeholder="Enter name">
			</div>
			<div class="d-flex justify-content-center">
				<input type="submit" value="Confirm" class="btn btn-success flex-grow-1 m-3" />
				<a asp-action="Index" class="btn btn-dark flex-grow-1 m-3">Back</a>
			</div>
		</form>
	</div>
</div>